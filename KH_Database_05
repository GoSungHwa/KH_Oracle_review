--객체 USER
        --권한이 없으므로 권한을 줘야함
        --기본권한 부여
GRANT CREATE SESSION TO EJKIM01;
GRANT CREATE TABLE TO EJKIM01;
GRANT CONNECT,RESOURCE TO EJKIM01;
GRANT SELECT ON SCOTT.DEPT03 TO EJKIM01;
GRANT INSERT ON SCOTT.DEPT03 TO EJKIM01;

GRANT CREATE SYNONYM TO SCOTT;

CREATE USER EJKIM01 IDENTIFIED BY 1234;
--사용자 생성 확인(DBA : DB관리자)
SELECT *FROM DBA_USERS;

--SYSTEM은 사용자 계정이라서 SYSDBA 관리자모드로 진입이 안된다.
--SYS만 가눙!!

--SYNONYM : 테이블 별칭
CREATE PUBLIC SYNONYM SD3 FOR SCOTT.DEPT03;
SELECT *FROM SD3;
